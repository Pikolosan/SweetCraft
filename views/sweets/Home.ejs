<% layout('./layouts/boilerplate') -%>
<body>
    <!-- Hero Section -->
    <div class="hero-container">
        <!-- Text container for the heading and paragraph -->
        <div class="text-container">
            <h1 class="text-heading">
                Welcome to SugarCraft!
            </h1>
            <p>Discover our delicious collection of handcrafted sweets, chocolates, and treats. Fresh ingredients, amazing flavors!</p>
            <a href="/sweets" class="btn btn-primary mt-3">Explore Sweets</a>
        </div>
        
        <!-- Image container to align the image to the right -->
        <div class="image-container">
            <img src="/images/banner2.jpg" alt="Sweet Shop Image">
        </div>
    </div>
    
    <!-- New Section: Get Started -->
    <section class="section get-start">
        <div class="get-start-container">
            <h2 class="h2 section-title mb-5">Get started with 4 simple steps</h2>
            <ul class="get-start-list mt-5">
                <li>
                    <div class="get-start-card">
                        <div class="card-icon icon-1">
                            <ion-icon name="person-add-outline"></ion-icon>
                        </div>
                        <h3 class="card-title">Create a profile</h3>
                        <p class="card-text">
                            Join our sweet community and create your account to start shopping.
                        </p>
                        <a href="/signup" class="listing-links text-sm">Get started</a>
                    </div>
                </li>

                <li>
                    <div class="get-start-card">
                        <div class="card-icon icon-2">
                            <i class="fas fa-candy-cane"></i>
                        </div>
                        <h3 class="card-title">Browse our sweets</h3>
                        <p class="card-text">
                            Explore our wide variety of chocolates, candies, baked goods and more.
                        </p>
                        <a href="/sweets" class="listing-links text-sm">Browse Sweets</a>
                    </div>
                </li>

                <li>
                    <div class="get-start-card">
                        <div class="card-icon icon-3">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <h3 class="card-title">Add to cart</h3>
                        <p class="card-text">
                            Select your favorite sweets and add them to your shopping cart.
                        </p>
                    </div>
                </li>

                <li>
                    <div class="get-start-card">
                        <div class="card-icon icon-4">
                            <ion-icon name="card-outline"></ion-icon>
                        </div>
                        <h3 class="card-title">Enjoy your treats</h3>
                        <p class="card-text">
                            Complete your purchase and enjoy delicious sweets delivered to you.
                        </p>
                    </div>
                </li>
            </ul>
        </div>
    </section>
</body>