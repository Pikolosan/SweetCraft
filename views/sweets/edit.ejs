<% layout('./layouts/boilerplate') -%>
<body>
  <div class="row mt-5">
    <div class="col-8 offset-2">
      <h3>Edit your Sweet</h3> <!-- Updated text -->
      <form method="POST" action="/sweets/<%= sweet._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        
        <div class="mb-3">
          <label for="name" class="form-label">Sweet Name</label> <!-- Updated label -->
          <input name="sweet[name]" value="<%= sweet.name %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Field cannot be empty!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="sweet[description]" class="form-control" required><%= sweet.description %></textarea>
          <div class="invalid-feedback">Field cannot be empty!</div>
        </div>

        <div class="mb-3">
          Original Sweet Image <br> <!-- Updated text -->
          <img src="<%= orgImgUrl %>">
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input name="sweet[image]" type="file" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label> <!-- Updated label -->
            <input name="sweet[price]" value="<%= sweet.price %>" type="number" class="form-control" required />
            <div class="invalid-feedback">Field cannot be empty!</div>
          </div>

          <div class="mb-3 col-md-4">
            <label for="quantity" class="form-label">Quantity</label> <!-- Updated label -->
            <input name="sweet[quantity]" value="<%= sweet.quantity %>" type="number" class="form-control" required />
            <div class="invalid-feedback">Field cannot be empty!</div>
          </div>

          <div class="mb-3 col-md-4">
            <label for="weight" class="form-label">Weight</label> <!-- Updated label -->
            <input name="sweet[weight]" value="<%= sweet.weight %>" type="text" class="form-control" />
            <div class="invalid-feedback">Field cannot be empty!</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label> <!-- Updated label -->
          <select name="sweet[category]" class="form-select" required>
            <option value="chocolate" <%= sweet.category === 'chocolate' ? 'selected' : '' %>>Chocolate</option>
            <option value="candy" <%= sweet.category === 'candy' ? 'selected' : '' %>>Candy</option>
            <option value="baked" <%= sweet.category === 'baked' ? 'selected' : '' %>>Baked</option>
            <option value="traditional" <%= sweet.category === 'traditional' ? 'selected' : '' %>>Traditional</option>
            <option value="sugar-free" <%= sweet.category === 'sugar-free' ? 'selected' : '' %>>Sugar Free</option>
            <option value="international" <%= sweet.category === 'international' ? 'selected' : '' %>>International</option>
          </select>
          <div class="invalid-feedback">Please select a category!</div>
        </div>

        <div class="mb-4">
          <label for="ingredients" class="form-label">Ingredients</label>
          <input name="sweet[ingredients]" value="<%= sweet.ingredients || '' %>" type="text" class="form-control" placeholder="Enter ingredients separated by commas (e.g., almond flour, sugar, butter)"/>
        </div>

        <div class="mb-3">
          <label for="sweetType" class="form-label">Sweet Type</label>
          <select name="sweet[sweetType]" class="form-select" required>
            <option value="" disabled>Select Sweet Type</option>
            <option value="cookies" <%= sweet.sweetType === 'cookies' ? 'selected' : '' %>>Cookies</option>
            <option value="cakes" <%= sweet.sweetType === 'cakes' ? 'selected' : '' %>>Cakes</option>
            <option value="chocolates" <%= sweet.sweetType === 'chocolates' ? 'selected' : '' %>>Chocolates</option>
            <option value="candies" <%= sweet.sweetType === 'candies' ? 'selected' : '' %>>Candies</option>
            <option value="pastries" <%= sweet.sweetType === 'pastries' ? 'selected' : '' %>>Pastries</option>
            <option value="desserts" <%= sweet.sweetType === 'desserts' ? 'selected' : '' %>>Desserts</option>
            <option value="traditional" <%= sweet.sweetType === 'traditional' ? 'selected' : '' %>>Traditional Sweets</option>
          </select>
          <div class="invalid-feedback">Please select a sweet type!</div>
        </div>

        <div class="mb-3">
          <label for="allergens" class="form-label">Allergens</label><br>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="Nuts" id="nuts" 
                  <%= sweet.allergens && sweet.allergens.includes('Nuts') ? 'checked' : '' %>>
            <label class="form-check-label" for="nuts">Nuts</label>
          </div>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="Dairy" id="dairy"
                  <%= sweet.allergens && sweet.allergens.includes('Dairy') ? 'checked' : '' %>>
            <label class="form-check-label" for="dairy">Dairy</label>
          </div>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="Gluten" id="gluten"
                  <%= sweet.allergens && sweet.allergens.includes('Gluten') ? 'checked' : '' %>>
            <label class="form-check-label" for="gluten">Gluten</label>
          </div>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="Soy" id="soy"
                  <%= sweet.allergens && sweet.allergens.includes('Soy') ? 'checked' : '' %>>
            <label class="form-check-label" for="soy">Soy</label>
          </div>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="Eggs" id="eggs"
                  <%= sweet.allergens && sweet.allergens.includes('Eggs') ? 'checked' : '' %>>
            <label class="form-check-label" for="eggs">Eggs</label>
          </div>
          
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sweet[allergens][]" value="None" id="none"
                  <%= sweet.allergens && sweet.allergens.includes('None') ? 'checked' : '' %>>
            <label class="form-check-label" for="none">None</label>
          </div>
        </div>

        <div class="mb-3">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" name="sweet[available]" id="available" 
                  <%= sweet.available ? 'checked' : '' %> value="true">
            <label class="form-check-label" for="available">Available for Purchase</label>
          </div>
        </div>
        
        <button class="btn btn-primary mt-3 mb-5">Update</button>
      </form>
    </div>
  </div>
</body>